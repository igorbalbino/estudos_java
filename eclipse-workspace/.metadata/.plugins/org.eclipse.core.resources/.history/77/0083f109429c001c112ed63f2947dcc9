package Gerador;

import java.util.*;
import javax.swing.JOptionPane;

public class GrapUI {
	public GrapUI() {
		
	}
	
	public void mostraTelaInicial() {
		int valorA = Integer.parseInt(
				JOptionPane.showInputDialog("Olá! Você está no Gerenciador de comandas simples.\n\n"
												+ "Digite uma das opções a seguir para navegar no sistema.\n\n"
												+ "1 - Gerar nova comanda.\n"
												+ "2 - Pagar comanda.\n"
												+ "3 - Mostrar comanda por nome.\n"
												+ "4 - Mostrar todas as comandas salvas.\n"
												+ "5 - Encerrar sistema.\n\n"));
	}
}
